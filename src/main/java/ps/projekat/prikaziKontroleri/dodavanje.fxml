         <RadioButton mnemonicParsing="false" text="Kreiranje novog cjenovnika">
            <VBox.margin>
               <Insets left="70.0" top="20.0" />
            </VBox.margin>
         </RadioButton>
         <RadioButton mnemonicParsing="false" text="Izmjena cjenovnika">
            <VBox.margin>
               <Insets left="70.0" />
            </VBox.margin>
         </RadioButton>
         <RadioButton mnemonicParsing="false" text="Brisanje cjenovnika">
            <VBox.margin>
               <Insets left="70.0" />
            </VBox.margin>
         </RadioButton>
          <StackPane prefHeight="150.0" prefWidth="200.0">
              <children>
                  <Label text="Cijena za jedan sat:" StackPane.alignment="TOP_LEFT">
                      <StackPane.margin>
                          <Insets left="60.0" top="70.0" />
                      </StackPane.margin>
                  </Label>
                  <TextField maxWidth="-Infinity" prefWidth="210.0" StackPane.alignment="TOP_LEFT">
                      <StackPane.margin>
                          <Insets left="180.0" right="100.0" top="65.0" />
                      </StackPane.margin>
                  </TextField>
                  <Label text="Cijena za jedan dan:" StackPane.alignment="TOP_LEFT">
                      <StackPane.margin>
                          <Insets left="60.0" top="130.0" />
                      </StackPane.margin>
                  </Label>
                  <TextField maxWidth="-Infinity" prefWidth="210.0" StackPane.alignment="TOP_LEFT">
                      <StackPane.margin>
                          <Insets left="180.0" right="100.0" top="125.0" />
                      </StackPane.margin>
                  </TextField>
                  <Button mnemonicParsing="false" text="Dodaj/izmjeni/obriši" StackPane.alignment="TOP_LEFT">
                      <StackPane.margin>
                          <Insets left="180.0" top="180.0" />
                      </StackPane.margin>
                  </Button>
               <Label text="Label" StackPane.alignment="TOP_LEFT">
                  <StackPane.margin>
                     <Insets left="60.0" top="25.0" />
                  </StackPane.margin>
               </Label>
              </children>
          </StackPane>
      </children>
      <StackPane.margin>
         <Insets />
      </StackPane.margin>
   </VBox>


</StackPane>
